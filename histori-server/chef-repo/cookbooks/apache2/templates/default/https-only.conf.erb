Listen <%=node['ipaddress']%>:80

<VirtualHost *:80>
    # Redirect all http traffic to https
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [NE,R,L]
</VirtualHost>

<IfModule mod_ssl.c>
    Listen <%=node['ipaddress']%>:443
    SSLProtocol All -SSLv2 -SSLv3
</IfModule>
